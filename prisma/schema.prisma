generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Patient model
model Patient {
  id           String        @id @default(cuid())
  name         String
  nameKana     String
  email        String        @unique
  phone        String
  dateOfBirth  DateTime
  gender       Gender
  address      String?
  postalCode   String?

  reservations Reservation[]

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@index([email])
  @@index([phone])
}

// Reservation model
model Reservation {
  id              String            @id @default(cuid())
  patientId       String
  patient         Patient           @relation(fields: [patientId], references: [id], onDelete: Cascade)

  appointmentDate DateTime
  appointmentTime String
  department      Department
  status          ReservationStatus @default(PENDING)
  symptoms        String?
  notes           String?

  reminderSent    Boolean           @default(false)
  reminderSentAt  DateTime?

  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@index([patientId])
  @@index([appointmentDate])
  @@index([status])
}

// Contact form submissions
model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String
  status    ContactStatus @default(UNREAD)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}

// Blog posts (for news/announcements)
model BlogPost {
  id          String   @id @default(cuid())
  title       String
  titleEn     String?
  titleZh     String?
  slug        String   @unique
  content     String
  contentEn   String?
  contentZh   String?
  excerpt     String?

  published   Boolean  @default(false)
  publishedAt DateTime?

  category    String?
  tags        String[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([published])
  @@index([publishedAt])
  @@index([slug])
}

// Enums
enum Gender {
  MALE
  FEMALE
  OTHER
}

enum Department {
  INTERNAL_MEDICINE  // 内科
  SURGERY           // 外科
  PEDIATRICS        // 小児科
  GENERAL           // 一般診療
}

enum ReservationStatus {
  PENDING    // 予約待ち
  CONFIRMED  // 確認済み
  COMPLETED  // 完了
  CANCELLED  // キャンセル
  NO_SHOW    // 無断キャンセル
}

enum ContactStatus {
  UNREAD     // 未読
  READ       // 既読
  REPLIED    // 返信済み
  ARCHIVED   // アーカイブ済み
}
